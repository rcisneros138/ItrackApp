@model IEnumerable<ITrack.Models.Tracker>

@{
    ViewBag.Title = "Index";
}

<h2>Tracker</h2>
@if (User.IsInRole("MasterAdmin") || User.IsInRole("CompanyAdmin"))
{
    <h4>Track all of your items and employees on the job. </h4>
}
<br />
<p>
    @if (User.IsInRole("MasterAdmin") || User.IsInRole("CompanyAdmin"))
    {
      @Html.ActionLink("Create New", "Create")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TimeOut)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TicketID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Details)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            Assigned @Html.DisplayNameFor(model => model.Employee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReturnDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TimeOut)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TicketID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Details)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReturnDate)
        </td>
        <td>
            @if (User.IsInRole("MasterAdmin") || User.IsInRole("CompanyAdmin")) {

            @Html.ActionLink("Edit |", "Edit", new { id = item.ID }) 
            @Html.ActionLink("Details |", "Details", new { id = item.ID }) 
            @Html.ActionLink("Delete", "Delete", new { id = item.ID })}
        </td>
    </tr>
}

</table>
